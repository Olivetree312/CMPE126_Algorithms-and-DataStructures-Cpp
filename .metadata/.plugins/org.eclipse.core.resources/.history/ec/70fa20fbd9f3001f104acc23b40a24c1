/*INCLUDES NODE STRUCT
 */

#ifndef LINKEDLIST_H_
#define LINKEDLIST_H_

using namespace std;

template <class T>
//struct is default public
struct Node{
	T data;
	Node* next;
};

template <class T>
class linkedList{
public:
	linkedList(T data);
	linkedList();

	//getters
	T getData();
	T* getNextPtr();

	//setters
	void setData(T data);
	//using pointer param to allow for null
	void setNext(T* data);

	bool isEmpty() const;
	bool isFull() const;
	int listSize() const;
	int maxListSize() const;

	void print();
	bool isItermAtEqual(int index, T elemType);
	void insertAt(int index, T elemType);
	void removeAt(int index);
	T retreiveAt(int index);
	void replaceAt(int index, T elemType);
	void clearList();

	linkedList& operator=(const linkedList& other);

	~linkedList();


//NODE IS TEMPLATE!!
private:
	Node<T>* head;
};




#endif /* LINKEDLIST_H_ */
