#ifndef HASHTABLE_H_
#define HASHTABLE_H_

#include <iostream>
#include <string>
#include <utility> //needed for pair template

class HashTable{
private:
	//bucket size assumed n=1
	//# of elements in arr
	int HTSize;
	pair<int, int> *arr;

public:
	//default size is 10
	HashTable();
	HashTable(int size);

	void print();
	//uses linear probing
	bool insert(int elem);
	int search(int elem);
	//VIRTUAL destructor needed
	virtual ~HashTable();
};

#endif /* HASHTABLE_H_ */
